<UserControl x:Class="MethodistApplication.Views.Staffs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MethodistApplication.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="209*"/>
            <ColumnDefinition Width="351*"/>
            <ColumnDefinition Width="240*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="194*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="StaffTable" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Button Name="AddStaffButton" Content="+Сотрудник" Margin="2,2,2,2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="AddStaffButton_Click"/>

    </Grid>
</UserControl>
